<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".Screen.User_Profilepage">


    <FrameLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/ajay" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="140dp"

            android:src="@drawable/ic_baseline_image_24" />
    </FrameLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp">


        <TextView
            android:id="@+id/school"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:text="School"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/black"
            android:textColorHint="#FE8DAB"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/school_name"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"

            android:text="Email Address "
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/black"
            tools:ignore="UselessParent"></EditText>


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/email_id"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/black"
            tools:ignore="UselessParent"></EditText>


        <TextView
            android:id="@+id/Nickname"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:text="Nick Name"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Nickname"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/black"
            tools:ignore="UselessParent"></EditText>

        <TextView
            android:id="@+id/emargancy"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/name2"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:text="Emergency Contact"
            android:textColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/emargancy"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:drawableRight="@drawable/ic_baseline_contact_phone_24"

            tools:ignore="UselessParent">




        </EditText>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"

        android:layout_marginBottom="60dp"

        android:background="@drawable/button_shape"
        android:paddingRight="20dp"
        android:text="UPDATE PROFILE"
        android:textAllCaps="false"
        android:textColor="#ffffff"></Button>






</RelativeLayout>