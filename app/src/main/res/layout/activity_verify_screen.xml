<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01808080"
    tools:context=".Screen.VerifyScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="78dp"
            android:src="@drawable/ic_baseline_textsms_24"
            android:layout_gravity="center"
            android:id="@+id/otp_verify_img"
            android:layout_height="78dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Verification"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Enter OTP Code sent to your number"
            android:textColor="#808080"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/lineare_shape"
            android:layout_height="220dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editext_shape"
                android:layout_height="50dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/btn_shape"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="50dp"></Button>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>